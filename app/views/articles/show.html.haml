=content_for :page_title, @article.headline.capitalize

%article.article
  .container
    .row
      .col-lg-10.col-lg-offset-2.col-md-10.col-md-offset-1
        %p.notice
          = notice
        %p
          = markdown @article.body
        %hr
        = render 'disqus'

        - if admin_signed_in?  && current_admin
          = link_to  "Edit", edit_article_path(@article), class: "btn btn-info"
          = link_to  "Delete Article", articles_path(@article), method: :delete, data: { confirm: "Are you sure you want to do this?"}, class: "btn btn-danger"
        %hr
        %br/
        %br/
